pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/username/repository.git'
            }
        }
        stage('Display README') {
            steps {
                script {
                    def readmeContent = readFile('README.md')
                    echo "README.md Content:\n${readmeContent}"
                }
            }
        }
    }
}
